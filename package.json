{
  "name": "more-recipes",
  "version": "1.0.0",
  "description": "More-Recipes provides a platform for users to share the awesome and exciting recipe ideas they have invented or learnt.\r Suppose a user comes up with a recipe, he/she can post it on More-Recipes and get feedback in form of reviews and votes from other users who explore that recipe. Users can also keep a list of their favorite recipes on the application.",
  "main": "app.js",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon --exec babel-node server/app.js",
    "test:server": "cross-env NODE_ENV=test npm run reset-migrate && cross-env NODE_ENV=test mocha server/test/**/**.spec.js --exit --require babel-register --reporter spec",
    "test:client": "jest && npm run client:coverage",
    "test": "npm run test:client && npm run coveralls",
    "build:server": "babel -d ./build ./server -s",
    "start": "node build/app.js",
    "migrate": "sequelize db:migrate",
    "reset-migrate": "sequelize db:migrate:undo:all&&sequelize db:migrate",
    "coveralls": "nyc npm run test:server && nyc report --reporter=text-lcov | coveralls",
    "watch": "webpack --config ./webpack.dev.js -w",
    "build:client": "webpack --config ./webpack.prod.js",
    "build": "npm run clean && npm run build:client && npm run build:server && cp server/index.html build && cp server/converted.json build",
    "clean": "rm -rf build && mkdir build",
    "client:coverage": "codecov --token=50ec302e-48d3-4b80-9f0e-4e5f64c32f67",
    "server:coverage": "nyc report --reporter=text-lcov | coveralls",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/missating/More-Recipes.git"
  },
  "author": "Vanessa Ating",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/missating/More-Recipes/issues"
  },
  "nyc": {
    "exclude": [
      "server/test/"
    ]
  },
  "homepage": "https://github.com/missating/More-Recipes#readme",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "clean-webpack-plugin": "^0.1.18",
    "codecov": "^3.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "image-webpack-loader": "^3.6.0",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "lodash.isempty": "^4.4.0",
    "mocha": "^3.4.2",
    "morgan": "^1.9.0",
    "moxios": "^0.4.0",
    "nodemon": "^1.12.1",
    "nyc": "^11.0.3",
    "path": "^0.12.7",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "prop-types": "^15.6.0",
    "react": "^16.1.0",
    "react-confirm-alert": "^1.0.8",
    "react-dom": "^16.1.0",
    "react-dropzone": "^4.2.7",
    "react-gravatar": "^2.6.3",
    "react-paginate": "^5.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "sequelize": "^4.19.0",
    "sequelize-cli": "^3.2.0",
    "sinon": "^4.3.0",
    "swagger-ui-express": "^2.0.15",
    "toastr": "^2.1.4",
    "transfer-webpack-plugin": "^0.1.4",
    "uglifyjs-webpack-plugin": "^1.1.8",
    "url-loader": "^0.6.2",
    "validator": "^9.2.0",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.1",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1"
  },
  "devDependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.1.4",
    "jest-environment-jsdom": "^22.1.4",
    "jest-localstorage-mock": "^2.2.0",
    "redux-mock-store": "^1.4.0",
    "rimraf": "^2.6.2",
    "webpack-dev-server": "^2.9.4"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "jest-environment-jsdom",
    "testEnvironment": "jsdom",
    "setupFiles": [
      "jest-localstorage-mock",
      "<rootDir>/client/src/__tests__/setupTest.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/client/src/__tests__/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "collectCoverage": true,
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.spec.js?(x)",
      "**/__tests__/?(*.)(spec|test).js?(x)"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/client/src/__tests__"
    ]
  }
}